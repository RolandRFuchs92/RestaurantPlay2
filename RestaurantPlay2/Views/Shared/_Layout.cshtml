<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title - My ASP.NET Application</title>
	<link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	@*<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" />*@
	<link href="~/Content/bootstrap/bootstrap.min.css" rel="stylesheet" />
	<link href="~/Content/bootstrap/datetimepicker/bootstrap-datetimepicker.min.css" rel="stylesheet" />
	<link href="~/Content/bootstrap/theme/bootstrap-theme.min.css" rel="stylesheet" />
	<link href="~/Content/DataTables/css/jquery.dataTables.min.css" />
	<link href="~/Content/fontawesome/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
	@Html.Partial("_Navbar")
	<div class="container body-content">
		@RenderBody()
		@RenderSection("SPAViews", required: false)
		<hr />
		<footer class="col-sm-12">
			<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
			@Html.ActionLink("Admin", "Login", "Account")
		</footer>
	</div>

	<script src="/Scripts/CustomScripts/CustomScripts.js" type="text/javascript"></script>
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles")
	@Scripts.Render("~/bundles/bootstrap")
	<script src="~/Scripts/DataTables/jquery.dataTables.js" type="text/javascript"></script>
	@RenderSection("scripts", required: false)

	<script>
		$(document).ready(function () {
			$('.date').datetimepicker();
		});

		$('.date').on('change dp.change',
			function (e) {
				$('#BlogDemo span.posted-on').html($(this).val());
			});

	</script>
</body>
</html>
