@using System.Collections
@using System.Web.UI.WebControls
@using RestaurantPlay2.Areas.BookNow.ViewModels
@model BookNowFormViewModel

<div class="row">
		<div class="col-lg-offset-2 col-lg-10 col-sm-12">
				<h4>Want to make a book?</h4>
				<h3>Book here!</h3>
				<br />

				<div class="col-sm-12 col-md-6">
						<div class="form-group">
								@Html.LabelFor(i => i.Name, new { @class = "col-sm-4 control-label" })
								<div class="col-sm-8">
										@Html.TextBoxFor(i => i.Name, new { @class = "form-control" })
										@Html.ValidationMessageFor(i => i.Name)
								</div>
						</div>
				</div>

				<div class="col-sm-12 col-md-6">
						<div class="form-group">
								@Html.LabelFor(i => i.HeadCount)
								<div class="col-sm-8">
										@* DROP DOWN LIST NOOOOO *@
								</div>
						</div>
				</div>

				<div class="col-sm-12 col-md-6">
						<div class="form-group">
								@Html.LabelFor(i => i.MobileNumber, new { @class = "col-sm-4 control-label" })
								<div class="col-sm-8">
										@Html.TextBoxFor(i => i.MobileNumber, new { @class = "form-control" })1
										@Html.ValidationMessageFor(i => i.MobileNumber)
								</div>
						</div>
				</div>

				<div class="col-sm-12 col-md-6">
						<div class="form-group">
								@Html.LabelFor(i => i.EmailAddress, new { @class = "col-sm-4 control-label" })
								<div class="col-sm-8">
										@Html.TextBoxFor(i => i.EmailAddress, new { @class = "form-control" })
										@Html.ValidationMessageFor(i => i.EmailAddress)
								</div>
						</div>
				</div>

			<div class="col-sm-12 col-md-6">
				<div class="form-group">
					@Html.LabelFor(i=>i.OccasionId, new{@class="col-sm-4 control-label"})
					<div class="col-sm-8">
						@*@Html.DropDownListFor(i=>i.OccasionId)*@
						@Html.ValidationMessageFor(i=>i.OccasionId)
					</div>
				</div>
			</div>

			<div class="col-sm-12 col-md-6">
				<div class="form-group">
					@Html.LabelFor(i=>i.IsConfirmed)
					<div class="col-sm-8">
						@Html.TextBoxFor(i=>i.IsConfirmed, new{ type="checkbox"})
					</div>
				</div>
			</div>
			
			<div class="col-sm-12 col-md-12">
				<div class="form-group">
					@Html.LabelFor(i=>i.Comment,new {@class="col-sm-4 control-label"})
					<div class="col-sm-8">
						@Html.TextAreaFor(i=>i.Comment, new {@class="form-control"})
					</div>
				</div>
			</div>
			
			<div class="row">
				<div class="col-sm-12">
					<input type="button" name="submit" value="Submit" class="btn btn-primary"/>
					<input type="button" name="Reset" value="Reset" class="btn btn-default"/>
				</div>
			</div>

		</div>
</div>

