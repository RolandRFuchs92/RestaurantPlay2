@using RestaurantPlay2.Areas.Blogger.ViewModels
@model List<BloggerViewModel>


<div class="row">
		<div class="col-sm-12">
				<h4>Blog Snippets</h4>
				@foreach (var blog in Model)
				{
						<div class="col-sm-3">
								<div class="blog-snippet">
										@Html.Partial("_BlogTile", blog)
								</div>
						</div>
				}
		</div>
</div>

<style>
		.blog-snippets {
				font-size: 10px;
		}

		.blog-snippet {
				margin: 5px;
		}

		.blog-snippets img {
				height: 150px;
		}

		.blog-snippets h4 {
				font-size: 14px;
		}

		.blog-snippets .lead {
				font-size: 12px;
		}

		.blog-snippets .blog-container {
				height: 400px;
		}
</style>